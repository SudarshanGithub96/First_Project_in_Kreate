@model MVC_ADOCRUD.Models.Property

@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    h4 {
        margin-top: 0px;
        text-align: center;
        margin-bottom: 4px;
    }

    th {
        font-size: 20px;
    }

    tr {
        border: 1px solid white;
        border-collapse: collapse;
    }
</style>


<h4>Schedule</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Employee_ID)



        <table class="table">
            <tr>
                <th>Examination Id</th>
                <th>Exam Id</th>
                <th>Published Date</th>
                <th>Registration Start Date </th>
                <th>Registration End Date </th>
                <th>Examination Start Date </th>
                <th>Examination End Date </th>
                <th></th>
            </tr>
            <tr>
                <td>
                    @Html.EditorFor(model => model.Exam_Notification_Id1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Exam_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Published_Date1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Registration_Start_Date1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Registration_End_Date1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Examination_Start_Date1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Examination_End_Date1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
        </table>



        <br />
        @Html.Partial("_Schedule")
        <br />
        <br />
        @Html.Partial("_Schedule2")
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <br />
                <br />
                @Html.ActionLink("Back to List", "Index", "Home", new { @class = "btn btn-success" })
            </div>
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
