@model IEnumerable<MVC_ADOCRUD.Models.Property>

@{
    ViewBag.Title = "Registration_Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h2, table {
        color: White;
        text-align: center;
    }
</style>


<h2>Registration List Page</h2>

<div class="container">
    @Html.ActionLink("Logout", "StudentLogin", "Home", new { area = "" }, new { @class = "btn btn-dark text-light" })
    <br />
    <br />
    <table class="table table-sm table-dark border-light text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exam_Notification_Id)
            </th>
            <th>    
                @Html.DisplayNameFor(model => model.Registration_Start_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration_End_Date)
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam_Notification_Id1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registration_Start_Date1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registration_End_Date1)
                </td>
                <td>
                    @Html.ActionLink("Registration", "Registration", "Home", new { area = "" }, new { @class = "btn btn-outline-info" })
                </td>
            </tr>
        }

    </table>

  
</div>

