@model IEnumerable<MVC_ADOCRUD.Models.Property>

@{
    ViewBag.Title = "SectionList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: gold;
    }
</style>
<h2>SectionList</h2>

<p>
    @Html.ActionLink("Add New Section Data", "Section", "Home", new { @class = " gap-2 col-2 btn btn-success" })
</p>
<table class="table table-bordered table-dark ">
    
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Section_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject_Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Minimum_Marks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maximum_Marks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section_Name)
        </th>
        <th></th>
    </tr>
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Section_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Minimum_Marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maximum_Marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "SectionUpdate", new { id = item.Section_Id }, new { @class = "btn btn-outline-light" })
                @Html.ActionLink("Delete", "SectionDelete", new { id = item.Section_Id }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Do you want to delete this record');" })
            </td>
        </tr>
    }

</table>
