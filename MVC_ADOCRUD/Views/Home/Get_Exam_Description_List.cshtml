@model IEnumerable<MVC_ADOCRUD.Models.Property>

@{
    ViewBag.Title = "Get_Exam_Description_List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: gold;
    }
</style>
<h2>Get_Exam_Description_List</h2>

<div>
    <p>
        @Html.ActionLink("Create New", "Exam_Description", "Home", new { @class = " gap-2 col-2 btn btn-success" })
    </p>
    <table class="table table-bordered table-active table-responsive table-striped   table-sm text-center table-dark text-white ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exam_Description_table_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exam_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description_Exam)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam_Description_table_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description_Exam)
                </td>
                <td>
                    <div  class="d-flex gap-2">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Exam_Description_table_Id }, new { @class = "btn btn-light" })
                        @Html.ActionLink("Delete", "Exam_Description_Delete", new { id = item.Exam_Description_table_Id }, new { @class = "btn btn-danger", onclick = "return confirm('Do you want to delete this record');" })
                    </div>
                </td>
            </tr>
        }

    </table>

</div>