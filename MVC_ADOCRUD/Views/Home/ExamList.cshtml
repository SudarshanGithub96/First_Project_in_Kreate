@model IEnumerable<MVC_ADOCRUD.Models.Property>

@{
    ViewBag.Title = "ExamList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2{
        color:gold;
    }
</style>
<h2>ExamList</h2>

<p>
    @Html.ActionLink("Add Exam Entry", "Exam","Home", new { @class = " gap-2 col-2 btn btn-success" })
</p>
<table class="table table-bordered table-active tabl table-hover  table-responsive table-striped   table-sm text-center table-dark text-white ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Exam_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exam_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exam_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exam_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "ExamUpdate", new { id = item.Exam_Id }, new { @class = "btn btn-outline-light" })
                @Html.ActionLink("Delete", "ExamDelete", new { id = item.Exam_Id }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Do you want to delete this record');" })
            </td>
        </tr>
    }

</table>
