@model MVC_ADOCRUD.Models.Property

@{
    ViewBag.Title = "ExamUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: gold;
    }
</style>
<h2>ExamUpdate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Exam_Id)



    <div class="form-group">
        @Html.LabelFor(model => model.Exam_Name, htmlAttributes: new { @class = "control-label col-md-2 text-light" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Exam_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Exam_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div>
            <input type="submit" value="Update the Data" class="btn btn-info" />
            @Html.ActionLink("Exam List", "ExamList", "Home", new { @class = "btn btn-success" })
        </div>
    </div>
    <br />
</div>
}

<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




<!--      Java script Alert Popup Message-->
@if (!string.IsNullOrEmpty(ViewBag.ExamUpdateData))
{
    <script type="text/javascript">
        alert("@ViewBag.ExamUpdateData");
    </script>
}