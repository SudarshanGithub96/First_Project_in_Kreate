@model MVC_ADOCRUD.Models.Property

@{
    ViewBag.Title = "Exam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: gold;
    }
</style>
<h2>Exam</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })




    <div class="form-group">
        @Html.LabelFor(model => model.Exam_Name, htmlAttributes: new { @class = "control-label col-md-2 text-light" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Exam_Name, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Exam Name" } })
            @Html.ValidationMessageFor(model => model.Exam_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Add Exam" class="btn btn-primary" />
                @Html.ActionLink("Exam List", "ExamList", "Home", new { @class = "btn btn-success" })
                <br />
                <br />

            </div>
        </div>

    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




<!--      Java script Alert Popup Message-->
@if (!string.IsNullOrEmpty(ViewBag.DataInsertExam))
{
    <script type="text/javascript">
        alert("@ViewBag.DataInsertExam");

    </script>
}


