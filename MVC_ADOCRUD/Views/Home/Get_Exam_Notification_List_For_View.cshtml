@model IEnumerable<MVC_ADOCRUD.Models.Property>

@{
    ViewBag.Title = "Get_Exam_Notification_List_For_View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table {
        color: white;
    }

    h2 {
        color: gold;
    }

    .labelcolor {
        color: white;
    }
</style>
<div class="container-fluid">

    <h2>Get_Exam_Notification_List</h2>


    <p>
        @Html.ActionLink("Add Exam Notification", "Exam_Notification1", "Home", new { @class = "d-grid col-md-2 btn btn-outline-light" })
    </p>


    <table class="table table-bordered table-active  table-responsive table-striped   table-sm text-center table-dark">
        <tr>
            <th>
                <label class="labelcolor">Exam Notificaation ID</label>
            </th>
            <th>
                <label class="labelcolor">Exam Id</label>
            </th>
            <th>
                <label class="labelcolor">Published Date</label>
            </th>
            <th>
                <label class="labelcolor">Registration Start Date</label>
            </th>
            <th>
                <label class="labelcolor">Registration End Date</label>
            </th>
            <th>
                <label class="labelcolor">Examination Start Date</label>
            </th>
            <th>
                <label class="labelcolor">Examination End Date</label>
            </th>
            <th>
                <label class="labelcolor">Option</label>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Exam_Notification_Id1) </td>
                <td>@Html.DisplayFor(modelItem => item.Exam_Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Published_Date1)</td>
                <td>@Html.DisplayFor(modelItem => item.Registration_Start_Date1)</td>
                <td>@Html.DisplayFor(modelItem => item.Registration_End_Date1)</td>
                <td>@Html.DisplayFor(modelItem => item.Examination_Start_Date1)</td>
                <td>@Html.DisplayFor(modelItem => item.Examination_End_Date1)</td>
                <td>
                    <div class="d-flex gap-2">
                        @Html.ActionLink("Terms/Condition", "Exam_Description", new { id = item.Exam_Notification_Id1 }, new { @class = "d-grid mx-auto btn btn-light btntextboxid" })
                        @Html.ActionLink("Schedule", "Schedule", new { id = item.Exam_Notification_Id1, Examination_Start_Date1=item.Examination_Start_Date1, Examination_End_Date1=item.Examination_End_Date1 , Examid=item.Exam_Id}, new { @class = "d-grid mx-auto btn btn-light btntextboxid" })
                        @Html.ActionLink("Delete", "Exam_Notification_Delete", new { id = item.Exam_Notification_Id1 }, new { @class = "d-grid mx-auto btn btn-danger", onclick = "return confirm('Do you want to delete this record');" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

