@model MVC_ADOCRUD.Models.Property

@{
    ViewBag.Title = "StudentLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: white;
        text-align: center;
    }

    #Form {
        color: white;
    }
    label{
        color:white;
    }
</style>


@Html.Raw(ViewBag.wwmd)

@Html.Raw(ViewBag.Password)


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container-fluid">
            <div class="form-horizontal">



                <div class="col-md-4 mx-auto" style="box-shadow: 0px 2px 40px 1px rgba(0,0,0,0); -webkit-box-shadow: 0px 2px 22px 1px rgba(0,0,0,40); -moz-box-shadow: 0px 2px 22px 1px rgba(0,0,0,0);">
                    <div class="card rounded" style=" background-color: rgba(0,0,0,40);">
                        <br />
                        <div class="text-center " style="font-family:'Verdana';">
                            <h2>Student Login Page</h2>
                        </div>
                        <!--<div class="text-center " style="font-family:'Verdana';">-->
                        @*<div class="col-12 text-light">
                                Admin:   @Html.RadioButton("UserType", "Admin_Login_Username")
                                Examinee: @Html.RadioButton("UserType", "Username")
                            </div>*@
                        <!--</div>-->

                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form id="Form">
                            <div class="form-control bg-transparent text-center border-0">
                                <input type="radio" onclick="document.location.href='https://localhost:44358/Home/Login'" name="link" />
                                <label>
                                    Admin Login
                                </label>
                                <input type="radio" onclick="document.location.href='https://localhost:44358/Home/StudentLogin'" name="link"  />
                                <label>
                                    Student Login
                                </label>
                            </div>
                            <div class="form-label text-light">

                                @Html.EditorFor(model => model.Employee_ID, new { htmlAttributes = new { @class = "form-control d-grid gap-2  mx-auto", PlaceHolder = "Roll No." } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger d-grid gap-2 col-8 mx-auto" })

                                <br />
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control d-grid gap-2 col-8 mx-auto", PlaceHolder = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger  d-grid gap-2 col-8 mx-auto " })
                                <br />
                                <div>
                                    <div class="text-center"> <button type="submit" class="btn btn-outline-warning">Login</button></div>
                                    <br />
                                </div>
                            </div>
                        </form>


                    </div>
                </div>

            </div>
        </div>
        <br />
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

