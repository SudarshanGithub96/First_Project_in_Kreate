@model IEnumerable<MVC_ADOCRUD.Models.Property>

@{
    ViewBag.Title = "GetCenterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2{
        color:gold;
    }
</style>
<h2>GetCenterList</h2>
<p>
    @Html.ActionLink("Add Center", "Center", "Home", new { @class = "d-grid col-md-2 btn btn-outline-light" })
</p>
<table class="table table-bordered table-active tabl table-hover  table-responsive table-striped   table-sm text-center table-dark text-white ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Center_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Center_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address_Of_Center_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Server_MAC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Center_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Center_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address_Of_Center_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Server_MAC)
            </td>
            <td>
                <div class="d-flex gap-2">
                    @Html.ActionLink("Edit", "Update_Center", new { id = item.Center_Id }, new { @class = "d-grid mx-auto btn btn-outline-light" })
                    @Html.ActionLink("Delete", "Center_Delete", new { id = item.Center_Id }, new { @class = "d-grid mx-auto btn btn-outline-danger", onclick = "return confirm('Do you want to delete this record');" })
                </div>
            </td>
        </tr>
    }

</table>
